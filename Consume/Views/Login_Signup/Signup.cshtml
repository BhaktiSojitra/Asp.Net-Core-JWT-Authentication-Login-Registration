@model Consume.Models.SignupModel

<main>
    <div class="container" style="width: 55rem">
        <section class="d-flex align-items-center justify-content-center">
            <div class="row w-100" style="max-width: 650px;">
                <div class="col-md-12 d-flex align-items-center justify-content-center" style="padding: 30px;">
                    <div class="card w-100" style="border: none; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
                        <div class="card-body">
                            <h3 class="card-title text-center" style="color: #ff9f1c; font-weight: bold; margin-bottom: 2px;">Sign Up</h3>
                            <p class="text-center small" style="color: #8d6e63;margin-bottom: 25px;">Join us to enjoy delicious home-cooked meals</p>

                            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                            {
                                <div class="alert alert-success text-center" style="font-size: 0.95rem; margin-bottom: 25px;">
                                    @ViewBag.SuccessMessage
                                </div>
                            }

                            <form class="row g-4 needs-validation" asp-controller="Login_Signup" asp-action="SignupSave" method="post">
                                <style>
                                    .custom-input {
                                        padding: 1.25rem 1.15rem;
                                        height: 1.4rem;
                                        background: rgb(255, 255, 255);
                                        font-size: 0.85rem;
                                        width: 100%;
                                        outline: none;
                                        box-sizing: border-box;
                                        border-radius: 8px;
                                    }
                                    .form-label {
                                        color: #D97706;
                                        position: absolute;
                                        top: -10px;
                                        left: 12px;
                                        background: #fff;
                                        padding: 0 5px;
                                        font-size: 0.85rem;
                                    }
                                    .password-container {
                                        position: relative;
                                        width: 100%;
                                    }
                                    .toggle-password {
                                        position: absolute;
                                        right: 17px;
                                        top: 50%;
                                        transform: translateY(-50%);
                                        cursor: pointer;
                                        color: #8d6e63;
                                        z-index: 1;
                                    }
                                    .textarea-custom {
                                        width: 100%;
                                        height: 80px;
                                        resize: none;
                                        border-radius: 8px;
                                        padding: 10px;
                                    }
                                </style>

                                <div class="col-12 position-relative">
                                    <input type="hidden" asp-for="UserID" />
                                    <label for="yourName" class="form-label">User name</label>
                                    <input type="text" asp-for="UserName" class="custom-input" id="yourName">
                                    <span class="text-danger" asp-validation-for="UserName" style="font-size: 0.85rem;"></span>
                                </div>

                                <div class="col-12 position-relative password-container">
                                    <label for="yourPassword" class="form-label">Password</label>
                                    <input type="password" asp-for="Password" class="custom-input input-wrapper" id="yourPassword" value="@Model?.Password">
                                    <span class="text-danger" asp-validation-for="Password" style="font-size: 0.85rem;"></span>

                                    <div class="mt-2">
                                        <input type="checkbox" id="showPasswordCheckbox" onclick="togglePassword()">
                                        <label for="showPasswordCheckbox" style="color: #8d6e63; font-size: 0.95rem;">Show Password</label>
                                    </div>
                                </div>

                                <div class="col-12 position-relative">
                                    <label for="yourEmail" class="form-label">Email</label>
                                    <input type="email" asp-for="Email" class="custom-input" id="yourEmail">
                                    <span class="text-danger" asp-validation-for="Email" style="font-size: 0.85rem;"></span>
                                </div>

                                <div class="col-12 position-relative">
                                    <label for="yourPhone" class="form-label">Phone number</label>
                                    <input type="number" asp-for="PhoneNumber" class="custom-input" id="yourPhone">
                                    <span class="text-danger" asp-validation-for="PhoneNumber" style="font-size: 0.85rem;"></span>
                                </div>

                                <div class="col-12 position-relative">
                                    <label for="yourAddress" class="form-label">Address</label>
                                    <textarea asp-for="Address" class="custom-input textarea-custom" id="yourAddress" rows="3"></textarea>
                                    <span class="text-danger" asp-validation-for="Address" style="font-size: 0.85rem;"></span>
                                </div>

                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" name="terms" type="checkbox" id="acceptTerms" required>
                                        <label class="form-check-label" for="acceptTerms" style="color: #8d6e63;">
                                            I agree to XYZ
                                            <a href="#" style="color: #d17a22;">Terms of Service</a>,
                                            <a href="#" style="color: #d17a22;">Privacy Policy</a> and
                                            <a href="#" style="color: #d17a22;">Content Policies</a>
                                        </label>
                                        <div class="invalid-feedback">You must agree before submitting.</div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button class="btn w-100" type="submit" id="createAccountBtn" disabled
                                            style="background-color: #ff9f1c; color: #fff;">
                                        Create account
                                    </button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0" style="color: #8d6e63;">
                                        Already have an account?
                                        <a asp-controller="Login_Signup" asp-action="Login" style="color: #d17a22;">Login</a>
                                    </p>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

<script>
     document.getElementById('acceptTerms').addEventListener('change', function () {
        document.getElementById('createAccountBtn').disabled = !this.checked;
     });

    function togglePassword() {
       var passwordInput = document.getElementById("yourPassword");
       var checkbox = document.getElementById("showPasswordCheckbox");

       passwordInput.type = checkbox.checked ? "text" : "password";
    }
</script>
